extends ../layout
include ../mixins/mixins

block content
    .page-list-pg.pg-wrapper
        section.top-page-box
            ._container.container
                ._inner
                    .breadcrumbs
                        ._items
                            a(href="/")._item Главная
                            ._item Список страниц
                    h1._title Список страниц
            ._bg.grid-bg
                +pictureAdaptive('top-page-box-grid', 'png', 1920, 250, 479)
        .container
            .pages-list
                a(href="index.html" target="_blank") Главная
                a(href="services.html" target="_blank") Услуговая
                a(href="about-us.html" target="_blank") О компании
                a(href="contacts.html" target="_blank") Контакты
                a(href="guarantees.html" target="_blank") Гарантии
                a(href="faq.html" target="_blank") Вопросы и ответы
                a(href="feedbacks.html" target="_blank") Отзывы